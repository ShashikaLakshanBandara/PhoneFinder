<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results"
    android:background="@drawable/gradient_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Toolbar
            android:id="@+id/toolbarBack"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@null"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            tools:targetApi="lollipop">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/icon_back" />

            <TextView
                android:id="@+id/TvSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="25dp"
                android:text="Results"
                android:textColor="@color/cardview_dark_background"

                android:textSize="12pt"
                android:textStyle="bold" />
        </Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/CardBg"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TVcontactUsOn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Details"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdBattery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/CardBg"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/TVbattery"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Battery"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/TVpercentage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="85%"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:layout_weight="1"

                            />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdWifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/CardBg"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/TVwifi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="WIFI"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/TVwifistatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="ON"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:layout_weight="1"

                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdgps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/CardBg"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/TVgps"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="GPS"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/TVgpsStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="ON"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:layout_weight="1"

                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdmobileData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/CardBg"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/TVmobiledata"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Mobile Data"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/TVmobileDataStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="ON"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:layout_weight="1"

                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdProfileMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/CardBg"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/TVprofile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Profile Mode"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/TVprofileModeStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Vibrate"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:layout_weight="1"

                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdPhoneVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/CardBg"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/TVvolume"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Phone Volume"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/TVvolumeStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="15%"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:layout_weight="1"

                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdautoSync"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/CardBg"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/TVautoSync"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Auto Sync"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/TVautoSyncStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="OFF"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:layout_gravity="end"
                            android:layout_weight="1"

                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/TVdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="By clicking “Remote Mode” you can change some settings of the lost device!"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"

                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btnRemoteMode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Remote Mode"

            app:backgroundTint="@color/btnBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>